import reo.fifo1;
import reo.sync;
import reo.syncdrain;

prod1(a?){
	#PROMELA "prod1"
	#RBA {a} true
}

prod2(a?){
	#PROMELA "prod2"
	#RBA {a} true
}

prod3(a?){
	#PROMELA "prod3"
	#RBA {a} true
}

cons(a?){
	#PROMELA "cons"
	#RBA {a} true
}

alternator(a[1..N],b[1]){
	{ syncdrain(a[i], a[i+1]) | i : <1..N> }
	{ fifo1(b[i+1], b[i]) | i : <1..N> }
	{ sync(a[i], b[i]) | i : <1..(N+1)> }
}

main() {
	prod1(a[1])
	prod2(a[2])
	prod3(a[3])
	cons(b[1])


	alternator(a[1..3],b[1])

}

