import reo.fifo1;
import reo.sync;
import reo.syncdrain;


producer(a!String) {
	#RBA {a} true
	Java:"Workers.producer"
}

consumer(a?String) {
	#RBA {a} true
	Java:"Workers.consumer"
}

alternator() {
	{ syncdrain(a[i], a[i+1]) | i : <1..(N-1)> }
	{ fifo1(b[i+1], b[i]) | i : <1..(N-1)> }
	{ sync(a[i], b[i]) | i : <1..N> }
	{ producer(a[i]) | i : <1..N> }
	consumer(b[1])
|
	N=35
}

