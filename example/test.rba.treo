sync(a?,b!){
	#RBA
	{a,b} a=b
}

syncdrain(a?,b?){
	#RBA
	{a,b} true
}

test(a[1..3]?,b[1]!) {
	{ syncdrain(a[i], a[i+1]) | i : <1..2> }
	{ fifo(b[i], b[i+1]) | i : <1..2> }
	{ sync(a[i], b[i]) | i : <1..3> }
}

test1(a?,b?,c!){
	sync(a,c)fifo(b,c)syncdrain(a,b)
}

